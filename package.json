{
  "name": "home-hub",
  "version": "1.0.0",
  "description": "Your Ultimate Household Inventory & Management App",
  "main": "index.js",
  "scripts": {
    "start": "BROWSER=firefox react-scripts start",
    "start:firefox": "BROWSER=firefox react-scripts start",
    "build": "react-scripts build",
    "test": "react-scripts test",
    "test:watch": "react-scripts test --watch",
    "test:coverage": "react-scripts test --coverage --watchAll=false",
    "test:ci": "react-scripts test --coverage --watchAll=false --ci",
    "test:integration": "jest --config jest.integration.config.js",
    "test:e2e": "cypress run",
    "test:e2e:open": "cypress open",
    "test:performance": "cypress run --spec 'src/tests/performance/**/*.test.js'",
    "test:security": "cypress run --spec 'src/tests/security/**/*.test.js'",
    "test:all": "node src/tests/run-tests.js",
    "optimize": "node scripts/optimize-production.js",
    "eject": "react-scripts eject",
    "lint": "eslint src/ --ext .js,.jsx",
    "lint:fix": "eslint src/ --ext .js,.jsx --fix",
    "lint:check": "eslint src/ --ext .js,.jsx --max-warnings 0",
    "security:audit": "npm audit --audit-level moderate",
    "security:fix": "npm audit fix",
    "analyze": "npm run build && npx webpack-bundle-analyzer build/static/js/*.js",
    "serve": "serve -s build -p 3000"
  },
  "dependencies": {
    "@hookform/resolvers": "^5.2.1",
    "@types/d3": "^7.4.3",
    "autoprefixer": "^10.4.16",
    "bcryptjs": "^3.0.2",
    "chart.js": "^4.5.0",
    "cors": "^2.8.5",
    "d3": "^7.9.0",
    "dompurify": "^3.2.7",
    "dotenv": "^17.2.1",
    "es-toolkit": "^1.39.10",
    "express": "^5.1.0",
    "express-rate-limit": "^8.0.1",
    "express-validator": "^7.2.1",
    "firebase": "^10.14.1",
    "helmet": "^8.1.0",
    "i18next": "^25.5.2",
    "i18next-browser-languagedetector": "^8.2.0",
    "i18next-http-backend": "^3.0.2",
    "idb": "^8.0.3",
    "joi": "^18.0.1",
    "jsonwebtoken": "^9.0.2",
    "lucide-react": "^0.294.0",
    "morgan": "^1.10.1",
    "postcss": "^8.4.32",
    "react": "^18.2.0",
    "react-chartjs-2": "^5.3.0",
    "react-dom": "^18.3.1",
    "react-firebase-hooks": "^5.1.1",
    "react-hook-form": "^7.62.0",
    "react-hot-toast": "^2.4.1",
    "react-i18next": "^16.0.0",
    "react-router": "^6.8.0",
    "react-router-dom": "^6.8.0",
    "react-scripts": "5.0.1",
    "recharts": "^2.8.0",
    "socket.io": "^4.8.1",
    "socket.io-client": "^4.8.1",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "tailwindcss": "^3.3.0",
    "workbox-webpack-plugin": "^7.3.0",
    "zod": "^4.0.17"
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@cypress/code-coverage": "^3.12.8",
    "@cypress/lighthouse": "^2.0.0",
    "@testing-library/cypress": "^9.0.0",
    "@testing-library/dom": "^10.4.1",
    "@testing-library/jest-dom": "^6.8.0",
    "@testing-library/react": "^16.3.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/react": "^18.2.0",
    "@types/react-dom": "^18.2.0",
    "cypress": "^13.6.0",
    "cypress-axe": "^1.0.0",
    "cypress-lighthouse": "^2.0.0",
    "eslint": "^8.57.1",
    "eslint-plugin-jsx-a11y": "^6.10.2",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^5.2.0",
    "eslint-plugin-security": "^3.0.1",
    "jest-environment-jsdom": "^30.1.1",
    "lighthouse": "^11.4.0",
    "msw": "^2.0.8"
  }
}
